<Window x:Class="HidReportInspector.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=netstandard"
        xmlns:local="clr-namespace:HidReportInspector"
        mc:Ignorable="d"
        Title="About" Height="300" Width="800">
    <DockPanel LastChildFill="False">
        <TextBlock Text="{x:Static local:Constants.APP_NAME}" DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="26" />
        <TextBlock Text="{x:Static local:Constants.exeversion}" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="22" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="0,0,20,20">
            <Button x:Name="closeBtn" Width="80" Height="20" Content="Close" Click="CloseBtn_Click" />
        </StackPanel>
    </DockPanel>
</Window>
